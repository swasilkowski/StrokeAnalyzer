<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Picture">
        <item name="android:layout_margin">@dimen/logo_margin</item>
    </style>

    <style name="LogoPicture" parent="@style/Picture">
        <item name="android:layout_height">@dimen/logo_size</item>
        <item name="android:layout_width">@dimen/logo_size</item>
    </style>

    <style name="OtherPicture" parent="@style/Picture">
        <item name="android:layout_height">@dimen/pic_size</item>
        <item name="android:layout_width">@dimen/pic_size</item>
    </style>

    <style name="Dialog">
        <item name="android:background">@color/colorStartBackground</item>
        <item name="android:paddingBottom">@dimen/dialog_padding</item>
        <item name="android:paddingTop">@dimen/dialog_padding</item>
        <item name="android:paddingLeft">@dimen/dialog_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/dialog_padding_horizontal</item>
    </style>

    <style name="Text">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:layout_marginLeft">@dimen/text_margin</item>
        <item name="android:layout_marginRight">@dimen/text_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/text_margin_vertical</item>
    </style>

<!--    <style name="StandardText" parent="@style/Text">
        <item name="android:textColor">@color/colorText</item>
    </style>-->

<!--    <style name="QuestionText" parent="@style/Text">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>-->
    
    <style name="ResultLabel">
        <item name="android:textSize">@dimen/result_label_text_size</item>
<!--        <item name="android:padding">@dimen/result_label_padding</item>-->
        <item name="android:layout_marginLeft">@dimen/text_margin</item>
        <item name="android:layout_marginRight">@dimen/text_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/text_margin_vertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Question">
        <item name="android:layout_margin">@dimen/question_margin</item>
    </style>

    <style name="EditTextCustom">
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/edit_text_margin</item>
    </style>

    <style name="EditTextNewPatient">
        <item name="android:textSize">@dimen/edit_text_new_patient_tezt_size</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="HugeText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/huge_text_size</item>
        <item name="android:layout_marginLeft">@dimen/text_margin</item>
        <item name="android:layout_marginRight">@dimen/text_margin</item>
    </style>

    <style name="SmallText">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:layout_marginLeft">@dimen/text_margin</item>
        <item name="android:layout_marginRight">@dimen/text_margin</item>
    </style>

    <style name="StandardText">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:paddingBottom">@dimen/text_padding</item>
        <item name="android:paddingRight">@dimen/text_padding</item>
        <item name="android:paddingTop">@dimen/text_padding</item>
        <item name="android:paddingLeft">@dimen/result_left_padding</item>
        <item name="android:layout_marginLeft">@dimen/text_margin</item>
        <item name="android:layout_marginRight">@dimen/text_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/text_margin_vertical</item>
    </style>

    <style name="LabelText">
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:layout_marginLeft">@dimen/text_margin</item>
        <item name="android:layout_marginRight">@dimen/text_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/text_margin_vertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingTop">@dimen/label_top_padding</item>
        <item name="android:paddingLeft">@dimen/label_left_padding</item>
        <item name="android:paddingBottom">@dimen/label_bottom_padding</item>
    </style>

    <style name="QuestionText">
        <item name="android:textSize">@dimen/question_text_size</item>
        <item name="android:layout_marginLeft">@dimen/text_margin</item>
        <item name="android:layout_marginRight">@dimen/text_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/text_margin_vertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ResultText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/huge_text_size</item>
        <item name="android:layout_marginLeft">@dimen/text_margin</item>
        <item name="android:layout_marginRight">@dimen/text_margin</item>
        <item name="android:paddingBottom">@dimen/result_label_padding</item>
        <item name="android:paddingRight">@dimen/result_label_padding</item>
        <item name="android:paddingTop">@dimen/result_label_padding</item>
        <item name="android:paddingLeft">@dimen/result_label_padding</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/text_margin_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SubresultText" parent="@style/ResultText">
        <item name="android:textSize">@dimen/question_text_size</item>
        <item name="android:paddingBottom">@dimen/text_padding</item>
        <item name="android:paddingRight">@dimen/text_padding</item>
        <item name="android:paddingTop">@dimen/text_padding</item>
        <item name="android:paddingLeft">@dimen/result_left_padding</item>
    </style>

    <style name="SumFrame">
        <item name="android:padding">@dimen/nihss_sum_padding</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">@dimen/nihss_sum_width</item>
    </style>

    <style name="InputFrame">
        <item name="android:layout_margin">@dimen/frame_margin</item>
        <item name="android:background">@color/white</item>
        <item name="android:shadowColor">@color/colorText</item>
        <item name="android:elevation">@dimen/frame_elevation</item>
    </style>

    <style name="AnswerTextView">
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/answer_text_size</item>
        <item name="android:padding">@dimen/answer_padding</item>
    </style>
    
    <style name="Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HugeButton" parent="@style/Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginLeft">@dimen/huge_button_margin</item>
        <item name="android:layout_marginRight">@dimen/huge_button_margin</item>
        <item name="android:layout_marginTop">@dimen/huge_button_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/huge_button_margin_vertical</item>
        <item name="android:textSize">@dimen/huge_button_text</item>
        <item name="android:padding">@dimen/huge_button_padding</item>
    </style>

    <style name="HugeButtonHorizontal" parent="@style/HugeButton">
        <item name="android:layout_marginLeft">@dimen/huge_button_margin_vertical</item>
        <item name="android:layout_marginRight">@dimen/huge_button_margin_vertical</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="DialogButton" parent="@style/Button">
        <item name="android:layout_marginLeft">@dimen/dialog_button_margin</item>
        <item name="android:layout_marginRight">@dimen/dialog_button_margin</item>
        <item name="android:layout_marginTop">@dimen/dialog_button_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/dialog_button_margin_vertical</item>
        <item name="android:textSize">@dimen/dialog_button_text</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MenuButton" parent="@style/Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/huge_button_text</item>
        <item name="android:padding">@dimen/huge_button_padding</item>
        <item name="android:layout_height">0px</item>
    </style>

    <style name="MenuButtonLandscape" parent="@style/Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/huge_button_text</item>
        <item name="android:padding">@dimen/huge_button_padding</item>
        <item name="android:layout_width">0px</item>
    </style>


</resources>
