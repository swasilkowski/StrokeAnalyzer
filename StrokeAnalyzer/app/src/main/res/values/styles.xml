<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Picture">
        <item name="android:layout_margin">@dimen/logo_margin</item>
    </style>

    <style name="LogoPicture" parent="@style/Picture">
        <item name="android:layout_height">@dimen/logo_size</item>
        <item name="android:layout_width">@dimen/logo_size</item>
    </style>

    <style name="OtherPicture" parent="@style/Picture">
        <item name="android:layout_height">@dimen/pic_size</item>
        <item name="android:layout_width">@dimen/pic_size</item>
    </style>

    <style name="Dialog">
        <item name="android:background">@color/colorStartBackground</item>
        <item name="android:paddingBottom">@dimen/dialog_padding</item>
        <item name="android:paddingTop">@dimen/dialog_padding</item>
        <item name="android:paddingLeft">@dimen/dialog_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/dialog_padding_horizontal</item>
    </style>

    <style name="Text">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:layout_marginLeft">@dimen/text_margin</item>
        <item name="android:layout_marginRight">@dimen/text_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/text_margin_vertical</item>
    </style>

    <style name="StandardText" parent="@style/Text">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="QuestionText" parent="@style/Text">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>
    
    <style name="ResultLabel">
        <item name="android:textSize">@dimen/result_label_text_size</item>
        <item name="android:padding">@dimen/result_label_padding</item>
        <item name="android:layout_marginLeft">@dimen/text_margin</item>
        <item name="android:layout_marginRight">@dimen/text_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/text_margin_vertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Question">
        <item name="android:layout_margin">@dimen/question_margin</item>
    </style>

    <style name="EditTextCustom">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/text_margin</item>
        <item name="android:layout_marginRight">@dimen/text_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/text_margin_vertical</item>
    </style>

    <style name="Patient_name">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/patient_text_size</item>
        <item name="android:layout_marginLeft">@dimen/text_margin</item>
        <item name="android:layout_marginRight">@dimen/text_margin</item>
        <item name="android:layout_marginBottom">@dimen/patient_text_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/patient_text_margin_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Patient_number">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/patient_number_text_size</item>
        <item name="android:layout_marginLeft">@dimen/text_margin</item>
        <item name="android:layout_marginRight">@dimen/text_margin</item>
        <item name="android:layout_marginBottom">@dimen/patient_text_margin_vertical</item>
        <item name="android:layout_marginTop">@dimen/patient_text_margin_vertical</item>
    </style>
    
    <style name="Button">
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="StartButton" parent="@style/Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginLeft">@dimen/start_button_margin</item>
        <item name="android:layout_marginRight">@dimen/start_button_margin</item>
        <item name="android:layout_marginTop">@dimen/start_button_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/start_button_margin_vertical</item>
        <item name="android:textSize">@dimen/start_button_text</item>
        <item name="android:padding">@dimen/start_button_padding</item>
    </style>

    <style name="NormalButton" parent="@style/Button">
        <item name="android:layout_marginLeft">@dimen/button_margin</item>
        <item name="android:layout_marginRight">@dimen/button_margin</item>
        <item name="android:layout_marginTop">@dimen/button_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_vertical</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
    </style>

</resources>
