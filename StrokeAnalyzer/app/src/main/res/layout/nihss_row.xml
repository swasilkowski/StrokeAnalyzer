<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/examination_row_padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/sumFrame"
        android:orientation="vertical">

        <TextView
            android:id="@+id/examinationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/HugeText"/>

        <TextView
            android:id="@+id/examinationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SmallText"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/sumFrame"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        style="@style/SumFrame">

        <TextView
            android:id="@+id/pointsSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/HugeText"
            android:textColor="@color/white"/>

    </FrameLayout>

</RelativeLayout>