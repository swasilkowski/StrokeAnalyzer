<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.asus.strokeanalyzer.View.FormListFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="10dp"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/dandcBt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_gravity="fill"
            android:text="@string/demographic_and_clinic_data"
            style="@style/HugeButtonHorizontal"/>

        <Button
            android:id="@+id/nihssBt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_gravity="fill"
            android:text="@string/nihss"
            style="@style/HugeButtonHorizontal"/>

        <Button
            android:id="@+id/treatmentBt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_gravity="fill"
            android:text="@string/treatment_decision"
            style="@style/HugeButtonHorizontal"/>

        <Button
            android:id="@+id/iscoreBt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            android:layout_gravity="fill"
            android:text="@string/iscore_scale"
            style="@style/HugeButtonHorizontal"/>

    </GridLayout>




</FrameLayout>
